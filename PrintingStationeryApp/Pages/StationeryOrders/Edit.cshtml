@page
@model PrintingStationeryApp.Pages.StationeryOrders.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>StationeryOrder</h4>
<hr />
<div>
    <form method="post" enctype="multipart/form-data">
        <div class="row col-12">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StationeryOrder.StationeryOrderId" />
            <div class="form-group col-2">
                <label asp-for="StationeryOrder.OrderNo" class="control-label"></label>
            </div>
            <div class="form-group col-3">
                <input asp-for="StationeryOrder.OrderNo" class="form-control" />
                <span asp-validation-for="StationeryOrder.OrderNo" class="text-danger"></span>
            </div>

            <div class="form-group col-2"></div>

            <div class="form-group col-2">
                <label asp-for="StationeryOrder.OrderNoInString" class="control-label"></label>
            </div>
            <div class="form-group col-3">
                <input asp-for="StationeryOrder.OrderNoInString" class="form-control" />
                <span asp-validation-for="StationeryOrder.OrderNoInString" class="text-danger"></span>
            </div>
            <br />
            <br />


            <div class="form-group col-2">
                <label asp-for="StationeryOrder.BranchId" class="control-label"></label>
            </div>
            <div class="form-group col-3">
                <select asp-for="StationeryOrder.BranchId" class="form-control" asp-items="ViewBag.BranchId"></select>
            </div>

            <div class="form-group col-2"></div>

            <div class="form-group col-2">
                <label asp-for="StationeryOrder.OrderDate" class="control-label"></label>
            </div>
            <div class="form-group col-3">
                <input asp-for="StationeryOrder.OrderDate" class="form-control" />
                <span asp-validation-for="StationeryOrder.OrderDate" class="text-danger"></span>
            </div>
            <br />
            <br />


            <div class="form-group col-2">
                <label asp-for="StationeryOrder.CompletionDate" class="control-label"></label>
            </div>
            <div class="form-group col-3">
                <input asp-for="StationeryOrder.CompletionDate" class="form-control" />
                <span asp-validation-for="StationeryOrder.CompletionDate" class="text-danger"></span>
            </div>

            <div class="form-group col-2"></div>

            <div class="form-group col-2">
                <label asp-for="StationeryOrder.PrintingCompanyId" class="control-label"></label>
            </div>
            <div class="form-group col-3">
                <select asp-for="StationeryOrder.PrintingCompanyId" class="form-control" asp-items="ViewBag.PrintingCompanyId"></select>
            </div>
            <br />
            <br />

            <div class="form-group col-2">
                <label asp-for="StationeryOrder.OrderById" class="control-label"></label>
            </div>
            <div class="form-group col-3">
                <select asp-for="StationeryOrder.OrderById" class="form-control" asp-items="ViewBag.OrderById"></select>
            </div>

            <div class="form-group col-2"></div>

            <div class="form-group col-2">
                <label asp-for="StationeryOrder.OrderStatus" class="control-label"></label>
            </div>
            <div class="form-group col-3">
                <select asp-for="StationeryOrder.OrderStatus" asp-items="Html.GetEnumSelectList<PrintingStationeryApp.Models.ApprovalState>()" class="form-control"></select>
                <span asp-validation-for="StationeryOrder.OrderStatus" class="text-danger"></span>
            </div>
            <br />
            <br />

            <div class="form-group col-2"></div>
            <div class="form-group form-check col-3">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="StationeryOrder.IsCompleted" /> @Html.DisplayNameFor(model => model.StationeryOrder.IsCompleted)
                </label>
            </div>

            <div class="form-group col-2"></div>

            <div class="form-group col-2">
                <label asp-for="StationeryOrder.ApprovedById" class="control-label"></label>
            </div>
            <div class="form-group col-3">
                <select asp-for="StationeryOrder.ApprovedById" class="form-control" asp-items="ViewBag.ApprovedById"></select>
            </div>
            <br />
            <br />

            <div class="form-group col-2">
                <label asp-for="StationeryOrder.ApprovedOn" class="control-label"></label>
            </div>
            <div class="form-group col-3">
                <input asp-for="StationeryOrder.ApprovedOn" class="form-control" />
                <span asp-validation-for="StationeryOrder.ApprovedOn" class="text-danger"></span>
            </div>

            <div class="form-group col-2"></div>

            <div class="form-group col-2">
                <label asp-for="StationeryOrder.TenantId" class="control-label"></label>
            </div>
            <div class="form-group col-3">
                <input asp-for="StationeryOrder.TenantId" class="form-control" />
                <span asp-validation-for="StationeryOrder.TenantId" class="text-danger"></span>
            </div>
            <br />
            <br />

            <div class="form-group col-2"></div>
            <div class="form-group form-check col-3">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="StationeryOrder.IsDeleted" /> @Html.DisplayNameFor(model => model.StationeryOrder.IsDeleted)
                </label>
            </div>

            <div class="form-group col-2"></div>

            <div class="form-group col-2">
                <label asp-for="StationeryOrder.Comments" class="control-label"></label>
            </div>
            <div class="form-group col-3">
                <textarea asp-for="StationeryOrder.Comments" class="form-control"></textarea>
                <span asp-validation-for="StationeryOrder.Comments" class="text-danger"></span>
            </div>
            <br />
            <br /><br />

            <div>
                <h3>Stationery Order Items</h3>
                <br /><br />
                <table>
                    <tr>
                        <th>FromStationeryNo</th>
                        <th>ToStationeryNo</th>
                        <th>NoOfBooks</th>
                        <th>Comments</th>
                        <th>TenantId</th>
                        <th>CompletionDate</th>
                        <th>IsDeleted</th>
                        <th>PrintingStationeryId</th>
                    </tr>
                    <tbody>
                        @for (var i = 0; i < Model.StationeryOrderItems.Count; i++)
                        {
                            <tr>
                                <td>
                                    <input type="number" id="StationeryOrderItems[@i].FromStationeryNo" asp-for="StationeryOrderItems[i].FromStationeryNo" />
                                </td>
                                <td>
                                    <input type="number" id="StationeryOrderItems[@i].ToStationeryNo" asp-for="StationeryOrderItems[i].ToStationeryNo" />
                                </td>
                                <td>
                                    <input type="number" id="StationeryOrderItems[@i].NoOfBooks" asp-for="StationeryOrderItems[i].NoOfBooks" />
                                </td>
                                <td>
                                    <input type="text" id="StationeryOrderItems[@i].Comments" asp-for="StationeryOrderItems[i].Comments" />
                                </td>
                                <td>
                                    <input type="number" id="StationeryOrderItems[@i].TenantId" asp-for="StationeryOrderItems[i].TenantId" />
                                </td>
                                <td>
                                    <input type="datetime" id="StationeryOrderItems[@i].CompletionDate" asp-for="StationeryOrderItems[i].CompletionDate" />
                                </td>
                                <td>
                                    <input type="bool" id="StationeryOrderItems[@i].IsDeleted" asp-for="StationeryOrderItems[i].IsDeleted" />
                                </td>
                                <td>
                                    <select id="StationeryOrderItems[@i].PrintingStationeryId" asp-for="StationeryOrderItems[i].PrintingStationeryId" class="form-control" asp-items="ViewBag.PrintingStationeryId"></select>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
        <div class="form-group btn-group col-12">
            <div class="col-3"></div>
            <div class="col-5">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <div class="col-4">
                <a class="btn btn-secondary btn-block" asp-page="Index">Back to List</a>
            </div>
        </div>
    </form>
</div>





@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
